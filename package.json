{
    "name": "nav-office-search",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p 3005",
        "build": "next build",
        "start": "next start -p 3005",
        "start-clean": "rm -fr .next && npm run build && npm start",
        "lint": "next lint",
        "typeCheck": "tsc --noemit",
        "deploy": "npx run-func trigger-workflow.js triggerWorkflow",
        "deploy-dev": "npm run deploy -- deploy.dev.yml"
    },
    "dependencies": {
        "@navikt/ds-css": "^0.6.20",
        "@navikt/ds-react": "^0.7.4",
        "@navikt/nav-dekoratoren-moduler": "^1.6.4",
        "amplitude-js": "^8.8.0",
        "classnames": "^2.3.1",
        "jsonwebtoken": "^8.5.1",
        "jwks-rsa": "^2.0.4",
        "lodash.debounce": "^4.0.8",
        "next": "^11.1.2",
        "node-cache": "^5.1.2",
        "node-fetch": "^2.6.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@octokit/core": "^3.5.1",
        "@babel/plugin-transform-unicode-regex": "^7.14.5",
        "@types/jsonwebtoken": "^8.5.5",
        "@types/lodash.debounce": "^4.0.6",
        "@types/node": "^16.10.2",
        "@types/react": "^17.0.27",
        "@types/react-dom": "^17.0.9",
        "eslint": "^7.32.0",
        "eslint-config-next": "^11.1.2",
        "fetch-mock": "^9.11.0",
        "husky": "^7.0.2",
        "next-transpile-modules": "^8.0.0",
        "prettier": "^2.4.1",
        "typescript": "^4.4.3"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run typeCheck && npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,ts,tsx,less, css}": "prettier --write"
    }
}
