{
    "name": "nav-office-search",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p 3005",
        "build": "next build",
        "start": "next start -p 3005",
        "start-clean": "rm -fr .next && npm run build && npm start",
        "lint": "next lint",
        "typeCheck": "tsc --noemit",
        "deploy": "npx run-func trigger-workflow.js triggerWorkflow",
        "deploy-dev": "npm run deploy -- deploy.dev.yml"
    },
    "dependencies": {
        "@navikt/ds-css": "2.0.11",
        "@navikt/ds-react": "2.0.11",
        "@navikt/nav-dekoratoren-moduler": "1.8.1",
        "amplitude-js": "8.21.3",
        "classnames": "2.3.2",
        "jsonwebtoken": "9.0.0",
        "jwks-rsa": "3.0.0",
        "lodash.debounce": "4.0.8",
        "next": "12.3.4",
        "node-cache": "5.1.2",
        "node-fetch": "3.3.0",
        "node-schedule": "2.1.0",
        "react": "17.0.2",
        "react-dom": "17.0.2"
    },
    "devDependencies": {
        "@babel/plugin-transform-unicode-regex": "7.18.6",
        "@octokit/core": "4.1.0",
        "@types/jsonwebtoken": "9.0.0",
        "@types/lodash.debounce": "4.0.7",
        "@types/node": "18.11.18",
        "@types/node-fetch": "2.6.2",
        "@types/node-schedule": "2.1.0",
        "@types/react": "17.0.52",
        "@types/react-dom": "17.0.18",
        "eslint": "8.31.0",
        "eslint-config-next": "12.3.4",
        "fetch-mock": "9.11.0",
        "husky": "8.0.3",
        "next-transpile-modules": "10.0.0",
        "prettier": "2.8.2",
        "typescript": "4.9.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run typeCheck && npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,ts,tsx,less, css}": "prettier --write"
    }
}
