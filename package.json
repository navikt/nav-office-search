{
    "name": "nav-office-search",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "typeCheck": "tsc --noemit",
        "build": "tsc && npm-run-all build:*",
        "build:client": "vite build --outDir server/frontendDist/client",
        "build:ssr": "vite build --outDir server/frontendDist/ssr --ssr src/main-server.tsx",
        "build:server": "npm run build --workspace server",
        "start": "npm run start --workspace server",
        "decorator": "docker compose up",
        "dev": "npm run dev --workspace server",
        "prod-local": "cp .env.local-prod .env && npm run prod-local --workspace server",
        "test": "react-scripts test --watchAll=false"
    },
    "workspaces": ["server"],
    "dependencies": {
        "@navikt/ds-css": "2.1.5",
        "@navikt/ds-react": "2.1.5",
        "@navikt/nav-dekoratoren-moduler": "1.9.0",
        "@preact/compat": "17.1.2",
        "lodash.debounce": "4.0.8",
        "preact-render-to-string": "5.2.6"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "5.16.5",
        "@testing-library/react": "13.4.0",
        "@octokit/core": "4.2.0",
        "@originjs/vite-plugin-commonjs": "1.0.3",
        "@preact/preset-vite": "2.5.0",
        "@types/jest": "29.4.0",
        "@types/lodash.debounce": "4.0.7",
        "@types/react": "18.0.27",
        "@types/react-dom": "18.0.10",
        "@types/react-test-renderer": "18.0.0",
        "@typescript-eslint/eslint-plugin": "5.50.0",
        "@typescript-eslint/parser": "5.50.0",
        "eslint": "8.33.0",
        "eslint-plugin-react": "7.32.2",
        "fetch-mock": "9.11.0",
        "husky": "8.0.3",
        "jest-fetch-mock": "3.0.3",
        "node-fetch": "2.6.7",
        "npm-run-all": "4.1.5",
        "prettier": "2.8.3",
        "react-scripts": "5.0.1",
        "react-test-renderer": "18.2.0",
        "typescript": "4.9.5",
        "vite": "4.1.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run typeCheck && npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,ts,tsx,less, css}": "prettier --write"
    }
}
