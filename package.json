        "classnames": "^2.3.1",
        "jsonwebtoken": "^8.5.1",
        "jwks-rsa": "^2.0.5",
        "lodash.debounce": "^4.0.8",
        "next": "^12.1.0",
        "node-cache": "^5.1.2",
        "node-fetch": "^2.6.7",
        "node-schedule": "^2.1.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@octokit/core": "^3.6.0",
        "@babel/plugin-transform-unicode-regex": "^7.16.7",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/lodash.debounce": "^4.0.6",
