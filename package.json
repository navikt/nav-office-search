{
    "name": "nav-office-search",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "typeCheck": "tsc --noemit",
        "build": "tsc && npm-run-all build:*",
        "build:client": "vite build --outDir server/frontendDist/client",
        "build:ssr": "vite build --outDir server/frontendDist/ssr --ssr src/main-server.tsx",
        "build:server": "npm run build --workspace server",
        "start": "npm run start --workspace server",
        "decorator": "docker compose up",
        "dev": "npm run dev --workspace server",
        "prod-local": "cp .env.local-prod .env && npm run prod-local --workspace server",
        "test": "jest"
    },
    "workspaces": ["server"],
    "dependencies": {
        "@navikt/ds-css": "3.0.0",
        "@navikt/ds-react": "3.0.0",
        "@navikt/nav-dekoratoren-moduler": "2.1.3",
        "@preact/compat": "17.1.2",
        "lodash.debounce": "4.0.8",
        "preact-render-to-string": "6.2.2"
    },
    "devDependencies": {
        "@babel/preset-react": "7.22.15",
        "@testing-library/jest-dom": "6.1.3",
        "@testing-library/react": "14.0.0",
        "@octokit/core": "5.0.1",
        "@originjs/vite-plugin-commonjs": "1.0.3",
        "@preact/preset-vite": "2.5.0",
        "@types/jest": "29.5.5",
        "@types/lodash.debounce": "4.0.7",
        "@types/react": "18.2.27",
        "@types/react-dom": "18.2.12",
        "@types/react-test-renderer": "18.0.3",
        "@typescript-eslint/eslint-plugin": "6.7.5",
        "@typescript-eslint/parser": "6.7.5",
        "eslint": "8.51.0",
        "eslint-plugin-react": "7.33.2",
        "fetch-mock": "9.11.0",
        "husky": "8.0.3",
        "identity-obj-proxy": "3.0.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-fetch-mock": "3.0.3",
        "node-fetch": "2.6.7",
        "npm-run-all": "4.1.5",
        "prettier": "3.0.3",
        "react-test-renderer": "18.2.0",
        "ts-jest": "29.1.1",
        "typescript": "5.1.6",
        "vite": "4.4.11"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run typeCheck && npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,jsx,json,md,ts,tsx,less, css}": "prettier --write"
    }
}
